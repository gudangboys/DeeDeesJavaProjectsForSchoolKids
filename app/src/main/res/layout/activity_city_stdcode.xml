<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CitySTDCode"
    android:background="@drawable/border_black_square">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relLayoutTopCitySTD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/border_black"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView_label_CitySTDCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    android:text="ENTER CITY AND SEARCH STD CODE"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:id="@+id/editTextUserAddCitySTDCode"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_label_CitySTDCode"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    android:hint="Add City Here..."
                    android:inputType="text"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/border_black_view"
                    android:padding="10dp"/>

                <EditText
                    android:id="@+id/editTextUserAddSTD_CitySTDCode"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextUserAddCitySTDCode"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    android:hint="Add STD Code here.."
                    android:inputType="number"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/border_black_view"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/btnAddData"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextUserAddSTD_CitySTDCode"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    android:text="Add Data"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_border"
                    android:textColor="@android:color/white"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relLayoutMiddleCitySTD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relLayoutTopCitySTD"
                android:layout_margin="8dp"
                android:background="@drawable/border_black"
                android:padding="8dp">

                <EditText
                    android:id="@+id/editTextSearchCity"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:hint="Search city..."
                    android:inputType="text"
                    android:background="@drawable/border_black_view"
                    android:padding="10dp"/>

                <Button
                    android:id="@+id/btnSearchCity"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editTextSearchCity"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    android:text="Search"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_border"
                    android:textColor="@android:color/white"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"/>

                <TextView
                    android:id="@+id/textView_result_CitySTDCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/btnSearchCity"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    android:inputType="textMultiLine"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="RESULT"
                    android:textColor="@android:color/black"/>

                <Button
                    android:id="@+id/btnResetSTDCityCode"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_result_CitySTDCode"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="12dp"
                    android:text="Reset"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_border"
                    android:textColor="@android:color/white"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:id="@+id/relLayoutBottomCitySTD"
                android:layout_below="@id/relLayoutMiddleCitySTD"
                android:background="@drawable/border_black">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="List"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:id="@+id/btnListCity"
                    android:background="@drawable/button_border"
                    android:textColor="@android:color/white"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView_CitySTD_ListAll"
                    android:layout_below="@id/btnListCity"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/border_black_view"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="insideInset"
                    android:scrollbarThumbVertical="@android:color/black"
                    android:fadeScrollbars="false"/>

            </RelativeLayout>

        </RelativeLayout>

</RelativeLayout>